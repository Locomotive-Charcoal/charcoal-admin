{
    "properties": {
        "roles": {
            "type": "object",
            "objType": "charcoal/admin/user/acl-role",
            "inputType": "charcoal/admin/property/input/checkbox",
            "pattern": "{{ident}}",
            "multiple": true
        }
    },

    "sources": {
        "default": {
            "table": "charcoal_admin_users"
        }
    },

    "defaultSource": "default",

    "admin": {
        "lists": {
            "default": {
                "label": {
                    "en": "Administrators / Managers",
                    "fr": "Administrateurs / Gestionnaires"
                },
                "properties": [
                    "displayName",
                    "email",
                    "roles",
                    "lastLoginDate"
                ],
                "listActions": [
                    {
                        "ident": "create",
                        "label": {
                            "en": "Create a new user",
                            "fr": "Créer un nouvel utilisateur"
                        },
                        "url": "object/edit?obj_type=charcoal/admin/user"
                    }
                ]
            }
        },

        "defaultList": "default",

        "forms": {
            "default": {
                "label": "Admin User Form",
                "groups": {
                    "main": {
                        "title": {
                            "en": "Information",
                            "fr": "Informations"
                        },
                        "properties": [
                            "active",
                            "displayName",
                            "email",
                            "password"
                        ],
                        "priority": 10
                    },
                    "access": {
                        "title": {
                            "en": "Access levels",
                            "fr": "Niveaux d'accès"
                        },
                        "properties": [
                            "roles"
                        ],
                        "priority": 20
                    },
                    "logs": {
                        "title": {
                            "en": "Logs",
                            "fr": "Journal"
                        },
                        "properties": [
                            "lastLoginDate",
                            "lastLoginIp",
                            "lastPasswordDate",
                            "lastPasswordIp"
                        ],
                        "priority": 30
                    }
                },
                "sidebars": {
                    "actions": {
                        "properties": [
                            "created",
                            "lastModified"
                        ]
                    }
                }
            }
        },

        "defaultForm": "default",

        "dashboards": {
            "admin.edit": {
                "layout": {
                    "structure": [
                        {
                            "numColumns": 3,
                            "columns": [ 2, 1 ]
                        }
                    ]
                },
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/object-form",
                        "objType": "charcoal/admin/user"
                    }
                },
                "secondaryMenu": {
                    "widgetOptions": {
                        "ident": "system"
                    }
                }
            },
            "admin.collection": {
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                },
                "widgets": {
                    "list": {
                        "type": "charcoal/admin/widget/table",
                        "label": "Admin user (website manager) list",
                        "objType": "charcoal/admin/user"
                    }
                },
                "secondaryMenu": {
                    "widgetOptions": {
                        "ident": "system"
                    }
                }
            }
        },

        "defaultCreateDashboard": "admin.edit",
        "defaultEditDashboard": "admin.edit",
        "defaultCollectionDashboard": "admin.collection"
    }
}
